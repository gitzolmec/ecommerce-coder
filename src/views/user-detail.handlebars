<header>
  <nav class="navbar navbar-light bg-dark min-vw-100">
    <a href="/api/products">
      <img src="/img/logo-2019.png" width="300px" />
    </a>
    <div class="welcome-message text-white">
      Bienvenido/a,
      {{userInfoDto.name}}
      {{userInfoDto.lastname}}<br />
      Role:
      {{userInfoDto.role}}
    </div>
    <div class="navbar navbar-expand-lg navbar-dark bg-dark">
      <div class="container-fluid container">
        <button
          class="navbar-toggler"
          type="button"
          data-bs-toggle="collapse"
          data-bs-target="#nav"
        >
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="nav">
          <ul class="navbar-nav">
            <li class="nav-item dropdown">
              <a
                href="#"
                class="nav-link dropdown-toggle"
                data-bs-toggle="dropdown"
              >
                Perfil
              </a>
              <ul class="dropdown-menu dropdown-menu-dark">
                <li class="nav-item">
                  <a href="/api/users/current" class="nav-link">
                    Mi Perfil
                  </a>
                </li>
                {{#isEqualOr userValidation "user" "premium"}}
                  <!-- Bloque para cuando adminValidation es "user" o "premium" -->
                  <li class="nav-item">
                    <a href="/api/users/purchaseHistory" class="nav-link">
                      Mis Compras
                    </a>
                  </li>
                {{/isEqualOr}}

                <li class="nav-item">
                  <a href="/api/auth/logout" class="nav-link">
                    Cerrar Session
                  </a>
                </li>
              </ul>
            </li>
            {{#isEqual userValidation "admin"}}
              <li class="nav-item">
                <a class="nav-link" href="/api/users/list">
                  Mantenedor de usuarios
                </a>
              </li>
              <li class="nav-item dropdown">
                <a
                  href="#"
                  class="nav-link dropdown-toggle"
                  data-bs-toggle="dropdown"
                >
                  Mantenedor de productos
                </a>
                <ul class="dropdown-menu dropdown-menu-dark">
                  <li class="nav-item">
                    <a href="/api/products/manager/create" class="nav-link">
                      Crear Producto
                    </a>
                  </li>
                  <li class="nav-item">
                    <a href="/api/products/manager/delete" class="nav-link">
                      Eliminar Producto
                    </a>
                  </li>
                </ul>
              </li>
            {{else}}
              {{#isEqual userValidation "premium"}}
                <li class="nav-item dropdown">
                  <a
                    href="#"
                    class="nav-link dropdown-toggle"
                    data-bs-toggle="dropdown"
                  >
                    Mantenedor de productos
                  </a>
                  <ul class="dropdown-menu dropdown-menu-dark">
                    <li class="nav-item">
                      <a href="/api/products/manager/create" class="nav-link">
                        Crear Producto
                      </a>
                    </li>
                    <li class="nav-item">
                      <a href="/api/products/manager/delete" class="nav-link">
                        Eliminar Producto
                      </a>
                    </li>
                  </ul>
                </li>
                <li class="nav-item">
                  <a class="nav-link" href="/api/chat">
                    Chat
                  </a>
                </li>
              {{else}}
                <li class="nav-item">
                  <a class="nav-link" href="/api/chat">
                    Chat
                  </a>
                </li>
              {{/isEqual}}
            {{/isEqual}}
          </ul>
        </div>
      </div>
    </div>

    <!-- Icono de carrito de compras -->
    <a class="nav-link text-white fw-bold cart" href="/api/carts/{{cartId}}">
      <i class="bi bi-cart mx-5" id="carritoContenedor">
        {{totalProducts}}
      </i>
    </a>
  </nav>
</header>

<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <div class="card">
        <div class="card-header">
          <h5 class="card-title">
            Perfil de Usuario
          </h5>
        </div>
        <div class="card-body">
          <div class="text-center">
            <img
              src="/img/default-user.png"
              alt="Imagen de Perfil"
              class="card-img-top rounded-circle img-fluid mb-3"
            />
          </div>
          <ul class="list-group list-group-flush">
            <li class="list-group-item">
              <strong>
                Nombre:
              </strong>
              {{userInfoDto.name}}
              {{userInfoDto.lastname}}
            </li>
            <li class="list-group-item">
              <strong>
                Correo:
              </strong>
              {{userInfoDto.email}}
            </li>
            <li class="list-group-item">
              <strong>
                Edad:
              </strong>
              {{userInfoDto.age}}
            </li>
            <li class="list-group-item">
              <strong>
                Rol:
              </strong>
              {{userInfoDto.role}}
            </li>
          </ul>
        </div>
      </div>
    </div>
  </div>
</div>

